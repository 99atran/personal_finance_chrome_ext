{
  "name": "Salary Snacker",
  "version": "0.0.5",
  "description": "This extension provides a lightweight visualization of your budget spending without accessing critical information.",
  "options_page": "html/options.html",
  "permissions": ["declarativeContent","storage","activeTab"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/proto1_16.png",
      "32": "images/proto1_32.png",
      "48": "images/proto1_48.png",
      "128": "images/proto1_128.png"
    }
  },
  "icons": {
    "16": "images/proto1_16.png",
    "32": "images/proto1_32.png",
    "48": "images/proto1_48.png",
    "128": "images/proto1_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "css": ["css/sites/amazon.css"],
      "js": ["js/sites/amazon.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://fonts.googleapis.com; object-src 'self'"
}