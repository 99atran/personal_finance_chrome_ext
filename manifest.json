{
  "name": "Salary Snacker",
  "version": "0.0.5",
  "description": "This extension provides a lightweight visualization of your budget spending without accessing critical information.",
  "options_page": "options.html",
  "permissions": ["declarativeContent","storage","activeTab"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["popup.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/proto1_16.png",
      "32": "images/proto1_32.png",
      "48": "images/proto1_48.png",
      "128": "images/proto1_128.png"
    }
  },
  "icons": {
    "16": "images/proto1_16.png",
    "32": "images/proto1_32.png",
    "48": "images/proto1_48.png",
    "128": "images/proto1_128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self'"
}